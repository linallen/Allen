<?xml version="1.0" encoding="UTF-8"?>
<example>
	<syntax>
		Java -jar sim_measure.jar -i input_arff -s sim_name [-k top_k] -o
		output_file
		<opt>
			-i input_file: [input] the ARFF data file.
		</opt>
		<opt>
			-s sim_name: [para] name of similarity measures: COS, CMS, SMD.
		</opt>
		<opt>
			-k top_k: [para] top K similar objects. Default 100.
		</opt>
	</syntax>
	<options>
		<option>
			<name>
				Input File
			</name>
			<key>
				-i
			</key>
			<vtype>
				<String />
			</vtype>
			<type>Input</type>
			<description>
				the ARFF data file.
			</description>
		</option>
		<option>
			<name>
				Similarity Measure
			</name>
			<key>
				-s
			</key>
			<vtype>
				Enum
				<values>COS, CMS, SMD</values>
			</vtype>
			<type>Parameter</type>
			<description>
				name of similarity measures.
			</description>
		</option>
		<option>
			<name>
				Top k
			</name>
			<key>
				-k
			</key>
			<vtype>
				Integer
				<min>1</min>
			</vtype>
			<type>Parameter</type>
			<default>
				100
			</default>
			<description>
				top K similar objects.
			</description>
		</option>
	</options>
</example>
